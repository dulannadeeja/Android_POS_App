<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingHorizontal="10dp"
    android:paddingVertical="10dp"
    android:orientation="horizontal">

    <com.google.android.material.button.MaterialButton
        style="@style/Widget.Material3.Button.IconButton.Filled"
        android:id="@+id/remove_split_payment_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        android:padding="0dp"
        app:icon="@drawable/baseline_delete_24"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconSize="24dp"
        app:iconTint="@color/textColorSecondary" />
    <!-- Dropdown menu for selecting payment method -->
    <Spinner
        android:layout_weight="1"
        android:id="@+id/spinner_payment_method"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:spinnerMode="dropdown" />

        <com.google.android.material.textfield.TextInputEditText
            android:layout_weight="1"
            android:id="@+id/et_split_payment_amount"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="10.00"
            android:gravity="end|center_vertical"
            android:textSize="24sp"
            android:background="@null"
            android:paddingEnd="0dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:paddingStart="0dp" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/charge_split_payment_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHARGE"
        android:background="@drawable/button_primary_box"
        android:padding="0dp"
        android:insetLeft="0dp"
        android:insetRight="0dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:layout_marginStart="10dp"
        />

</LinearLayout>