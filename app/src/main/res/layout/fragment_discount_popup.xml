<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <LinearLayout
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/close_button"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_close_24"
            android:layout_gravity="center_vertical|start"
            android:layout_marginEnd="8dp"/>
        <TextView
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Discount"
            android:textSize="18sp"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/add_button"
            android:layout_weight="2"
            android:padding="0dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="ADD"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_gravity="end"/>
    </LinearLayout>

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />

    <RadioGroup
            android:id="@+id/discount_radio_group"
            android:paddingHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/percentage_off_radio_button"
                android:layout_marginEnd="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Precentage off"/>
            <RadioButton
                android:id="@+id/fixed_amount_off_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fixed amount off"/>
        </RadioGroup>

    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />

    <TextView
        android:id="@+id/discount_amount_text_view"
        android:paddingHorizontal="20dp"
        android:paddingVertical="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0.00"
        android:gravity="end"
        android:textSize="28sp"
        />



    <TableLayout
        android:paddingHorizontal="20dp"
        android:paddingBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:layout_marginBottom="8dp"
            >
            <Button
                android:id="@+id/one_button"
                android:textSize="18sp"
                android:background="@drawable/button_shadow_background"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="1" />

            <Button
                android:id="@+id/two_button"
                android:textSize="18sp"
                android:background="@drawable/button_shadow_background"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="2" />
            <Button
                android:id="@+id/three_button"
                android:textSize="18sp"
                android:background="@drawable/button_shadow_background"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="3" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:layout_marginBottom="8dp"
            >
            <Button
                android:id="@+id/four_button"
                android:textSize="18sp"
                android:background="@drawable/button_shadow_background"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="4" />

            <Button
                android:id="@+id/five_button"
                android:textSize="18sp"
                android:background="@drawable/button_shadow_background"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="5" />
            <Button
                android:id="@+id/six_button"
                android:textSize="18sp"
                android:background="@drawable/button_shadow_background"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="6" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:layout_marginBottom="8dp"
            >
            <Button
                android:id="@+id/seven_button"
                android:textSize="18sp"
                android:background="@drawable/button_shadow_background"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="7" />

            <Button
                android:id="@+id/eight_button"
                android:textSize="18sp"
                android:background="@drawable/button_shadow_background"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="8" />
            <Button
                android:id="@+id/nine_button"
                android:textSize="18sp"
                android:background="@drawable/button_shadow_background"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="9" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:layout_marginBottom="8dp"
            >
            <Button
                android:id="@+id/zero_button"
                android:textSize="18sp"
                android:background="@drawable/button_shadow_background"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="0" />

            <Button
                android:id="@+id/clear_button"
                android:textSize="18sp"
                android:background="@drawable/button_shadow_background"
                android:elevation="20dp"
                android:padding="10dp"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Clear" />
        </TableRow>

    </TableLayout>

</LinearLayout>
