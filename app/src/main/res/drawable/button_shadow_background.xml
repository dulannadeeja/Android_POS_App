<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow layer (Bottom and Right) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#80000000" /> <!-- Shadow color -->
            <corners android:radius="12dp" /> <!-- Same corner radius as button -->
            <padding
                android:right="4dp"
                android:bottom="4dp"
                android:left="0dp"
                android:top="0dp" />
        </shape>
    </item>

    <!-- Button background -->
    <item
        android:left="0dp"
        android:top="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Button color -->
            <corners android:radius="12dp" /> <!-- Rounded corners -->
        </shape>
    </item>

</layer-list>
